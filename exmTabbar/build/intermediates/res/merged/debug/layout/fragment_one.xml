<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
            <Button
                android:onClick="click"
                android:id="@+id/bt_all"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/data_icon"
                android:paddingTop="45dp"
                android:text="全部音频"
                android:textSize="@dimen/sanshier"
                android:textColor="@color/detailGrey"
                />

            <Button
                android:onClick="click"
                android:id="@+id/bt_daf"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/data_icon"
                android:paddingTop="45dp"
                android:text="DAF"
                android:textSize="@dimen/sanshier"
                android:textColor="@color/detailGrey"
                />

            <Button
                android:onClick="click"
                android:id="@+id/bt_dsh"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/data_icon"
                android:paddingTop="45dp"
                android:text="DSH"
                android:textSize="@dimen/sanshier"
                android:textColor="@color/detailGrey"
	                />
	    </LinearLayout>
	<!--=========================第二行=========================-->
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal">
		        <Button
		            android:onClick="click"
		            android:id="@+id/bt_news"
		            android:layout_weight="1"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:background="@drawable/data_icon"
		            android:paddingTop="45dp"
		            android:text="新闻"
		            android:textSize="@dimen/sanshier"
		            android:textColor="@color/detailGrey"
		            />
		        <Button
		            android:onClick="click"
		            android:id="@+id/bt_daily"
		            android:layout_weight="1"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:background="@drawable/data_icon"
		            android:paddingTop="45dp"
		            android:text="日常"
		            android:textSize="@dimen/sanshier"
		            android:textColor="@color/detailGrey"
		            />
		        <Button
		            android:onClick="click"
		            android:id="@+id/bt_other"
		            android:layout_weight="1"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:background="@drawable/data_icon"
		            android:paddingTop="45dp"
		            android:text="其他"
		            android:textSize="@dimen/sanshier"
		            android:textColor="@color/detailGrey"
		            />
	
	    </LinearLayout>
	</LinearLayout>    
	
    

